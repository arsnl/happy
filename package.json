{
  "name": "peppy",
  "private": true,
  "description": "Peppy - ESLint configurations for happier developers",
  "homepage": "https://github.com/arsnl/peppy",
  "bugs": {
    "url": "https://github.com/arsnl/peppy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/arsnl/peppy.git"
  },
  "license": "MIT",
  "author": {
    "name": "Neaf",
    "email": "ahoy@neaf.co",
    "url": "https://neaf.co"
  },
  "contributors": [
    {
      "name": "Mark Arseneault",
      "email": "mark@arsnl.dev",
      "url": "https://arsnl.dev"
    }
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --check .",
    "fix": "prettier --write --loglevel warn . && npm run lint -- --fix",
    "validate": "npm run format && npm run lint && node tests/prepare --post",
    "docgen": "node scripts/docgen",
    "clean": "npx rimraf --glob **/node_modules",
    "test": "jest",
    "pretest": "node scripts/test-prepare && pnpm install --no-frozen-lockfile",
    "posttest": "node scripts/test-prepare --post"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.2",
    "eslint": "^8.28.0",
    "eslint-config-peppy": "workspace:*",
    "glob": "^8.0.3",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "jest": "latest"
  }
}
