{
  "name": "peppy",
  "private": true,
  "description": "Peppy - ESLint configurations for happier developers",
  "homepage": "https://github.com/arsnl/peppy",
  "bugs": {
    "url": "https://github.com/arsnl/peppy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/arsnl/peppy.git"
  },
  "license": "MIT",
  "author": {
    "name": "Neaf",
    "email": "ahoy@neaf.co",
    "url": "https://neaf.co"
  },
  "contributors": [
    {
      "name": "Mark Arseneault",
      "email": "mark@arsnl.co",
      "url": "https://arsnl.co"
    }
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --check --loglevel warn .",
    "fix": "prettier --write --loglevel warn . && npm run lint -- --fix",
    "docgen": "node scripts/docgen",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.2",
    "eslint": "^8.28.0",
    "eslint-config-peppy": "*",
    "glob": "^8.0.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2"
  },
  "lint-staged": {
    "*": "prettier --check",
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
