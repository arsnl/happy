    "eslint-plugin-unicorn": "^24.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2",
    "ramda": "^0.27.1",
    "react": "^16.8.0 || ^17",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
